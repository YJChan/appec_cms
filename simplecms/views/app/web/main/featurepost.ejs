<div id="carouselPost" class="carousel slide blog-carousel">
  <ol class="carousel-indicators">
  <% var count = 0; %>
    <% data.feature_post.forEach(function(post){ %>
        <li data-target="#carouselPost" data-slide-to="<%=count%>" class="<%if (count===0){%> 
        active 
        <%} %>"></li>
    <% count ++; %>
    <% });%>
  </ol>
  <div class="carousel-inner">
    <% count = 0; %>
    <% data.feature_post.forEach(function(post){ %>
        <% if (count === 0){ %> 
        <%- '<div class="carousel-item carousel-item-show active">' %>
        <% }else{ %>
        <%- '<div class="carousel-item carousel-item-show">' %>
        <% } %>
            <img class="d-block w-100 carousel-image" src="<%= post.Post_Image[0].url%>" 
                onclick="appec.common.redirectTo('<%= data.setting.SiteURL + '/post/' + post.title %>')" alt="<%= post.Post_Image[0].ImageID%>" />  
            <div class="carousel-caption d-inline bg-light p-3 carousel-text text-dark" style="cursor:pointer;"
                onclick="appec.common.redirectTo('<%= data.setting.SiteURL + '/post/' + post.title %>')" >
                <h5><%= post.title %></h5>
            </div>
        </div>
    <% count++; 
    return false;%>
    <% }); %>
    </div>
    <a class="carousel-control-prev" href="#carouselPost" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselPost" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>